<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('partials/header') %>
    <title>Entry new Books</title>
  </head>
  <body>
    <div class="container p-4">
      <%- include('partials/navigation') %>
      <form method="post" action="/new-entry" class="card card-body">
        <div class="form-control">
          <label for="title">Title:</label>
          <input
            type="text"
            name="title"
            id="title"
            class="form-control"
            placeholder="Entry new Title"
            autofocus
            required
          />
        </div>

        <div class="form-control">
          <label for="author">Author:</label>
          <input
            type="text"
            name="author"
            id="author"
            class="form-control"
            placeholder="Entry new Author"
          />
        </div>

        <div class="form-control">
          <label for="image">Image Url:</label>
          <input
            type="text"
            name="image"
            id="image"
            class="form-control"
            placeholder="http://"
          />
        </div>

        <div class="form-control">
          <label for="contents">Contents:</label>
          <textarea
            rows="2"
            name="contents"
            id="contents"
            class="form-control"
            placeholder="Add a description"
            required
          ></textarea>
          <input type="submit" value="Entry" class="btn btn-primary mt-10" />
        </div>
      </form>
    </div>
  </body>
</html>
